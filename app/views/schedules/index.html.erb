<h1>Listing schedules</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Timeslot</th>
      <th>SubjSect</th>
    
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.day.name %></td>
        <td><%= schedule.timeslot.name %></td>
        <td><%= schedule.subjsect.name %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

